{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"meta": {
		"title": "Demo of new Twombly theme",
		"description": "Blueprint with demo content for the Twombly theme",
		"author": "georgestephanis",
		"categories": [ "Themes", "twombly" ]
	},
	"landingPage": "/",
	"preferredVersions": {
		"php": "latest",
		"wp": "latest"
	},
	"features": {
		"networking": true
	},
	"steps": [
		{
			"step": "installPlugin",
			"pluginData": {
				"resource": "wordpress.org/plugins",
				"slug": "create-block-theme"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "installTheme",
			"themeData": {
				"resource": "url",
				"url": "https://github-proxy.com/proxy/?repo=georgestephanis/twombly"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "runPHP",
			"code": "<?php require '/wordpress/wp-load.php';include_once get_theme_file_path('_playground/setup.php');"
		},
		{
			"step": "importWxr",
			"file": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/georgestephanis/twombly/refs/heads/main/_playground/Iconick-Starter-Data.xml"
			}
		},
		{
			"step": "writeFile",
			"path": "/wordpress/wp-content/mu-plugins/rewrite.php",
			"data": "<?php add_action( 'after_setup_theme', function() { global $wp_rewrite; $wp_rewrite->set_permalink_structure('/%postname%/'); $wp_rewrite->flush_rules(); } );"
		},
		{
			"step": "setSiteOptions",
			"options": {
				"blogname": "Twombly",
				"blogdescription": "Blockratize Publishing"
			}
		},
		{
			"step": "defineWpConfigConsts",
			"consts": {
				"WP_DEBUG": true,
				"WP_DEBUG_DISPLAY": true
			}
		},
		{
			"step": "login",
			"username": "admin"
		}
	]
}
